#!/usr/bin/env node

'use strict';

var argv = require('minimist')(process.argv.slice(2));
var collector = require('../lib');
var pkg = require('../package.json');

var cmd = argv._[0] || 'collect';
var options = {
  rootDir: process.cwd(),
  kit: argv.kit,
  basicPackage: argv.basic
};

if (argv.version) {

  console.log('Collector version: ', pkg.version);

} else if (cmd === 'collect') {

  collector.collect(options);

} else if (cmd === 'upload') {

  collector.upload(options);

} else {

  console.log('未知命令');

}


